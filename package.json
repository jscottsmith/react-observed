{
  "name": "react-observed",
  "version": "1.0.2",
  "description": "React component using the browser's Intersection Observer API to watch for when an element is within (or intersecting with) the viewport.",
  "keywords": [
    "react",
    "component",
    "intersection observer",
    "asynchronous",
    "watch",
    "scroll",
    "element",
    "visibility",
    "viewport"
  ],
  "author": "J Scott Smith",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jscottsmith/react-observed"
  },
  "main": "lib/index.js",
  "files": [
    "lib",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "yarn test && webpack --progress --colors --watch",
    "start:server": "node ./dist/server.js",
    "watch": "webpack --watch",
    "test": "BABEL_ENV=test jest && codecov",
    "test:watch": "BABEL_ENV=test jest --watch",
    "storybook": "start-storybook -p 6006",
    "storybook:export": "build-storybook -c .storybook -o build",
    "prepublish": "babel ./src --out-dir ./lib"
  },
  "jest": {
    "modulePaths": [
      "<rootDir>/src/"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "testURL": "http://localhost/"
  },
  "dependencies": {
    "prop-types": "^15.5.10"
  },
  "peerDependencies": {
    "react": "^15.0.0-0 || ^16.0.0-0"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.2.12",
    "@storybook/addon-links": "^3.2.12",
    "@storybook/react": "^3.2.12",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.23.1",
    "babel-jest": "^21.2.0",
    "babel-loader": "^6.3.2",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-0": "^6.24.1",
    "classnames": "^2.2.5",
    "codecov": "^3.0.0",
    "css-loader": "^0.28.0",
    "file-loader": "^0.11.2",
    "intersection-observer": "^0.4.2",
    "jest": "^22.2.2",
    "node-sass": "^4.5.0",
    "postcss-loader": "^1.3.3",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "sass-loader": "^6.0.3",
    "style-loader": "^0.16.1",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^3.1.11",
    "webpack-node-externals": "^1.6.0"
  }
}
